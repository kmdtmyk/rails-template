= form_with(model: [:settings, user], local: true) do |form|
  = hidden_referrer
  .form-row
    .form-group
      = form.label :username
      = form.text_field :username, required: true
    - if user.new_record?
      .form-group
        = form.label :password
        = form.password_field :password, required: true
    .form-group
      = form.label '氏名'
      = form.text_field :name, required: true
    .form-group
      = form.label 'ふりがな'
      = form.text_field :furigana
  = form.submit

